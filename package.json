{
  "name": "ts-lambda-api-local",
  "description": "Test ts-lambda-api API's locally using express.",
  "version": "0.4.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/djfdyuruiry/ts-lambda-api-local.git"
  },
  "scripts": {
    "build": "yarn run lint && rm -rf dist && tsc && yarn docs",
    "build-all": "yarn run install-with-audit && yarn run build && yarn run build-tests",
    "build-tests": "rm -rf ./tests/js && tsc -p ./tests",
    "docs": "rm -rf ./docs && typedoc --mode file --excludePrivate --sourcefile-url-prefix https://github.com/djfdyuruiry/ts-lambda-api-local/blob/master/src/ --out ./docs",
    "clean-install": "rm -rf node_modules && yarn install-with-audit",
    "install-with-audit": "yarn install --audit && yarn audit",
    "lint": "tslint 'src/**/*.ts'",
    "shell": "bash",
    "test": "yarn run build-all && scripts/runTests.sh",
    "test-app": "yarn build-all && node ./tests/js/test-components/TestApp.js"
  },
  "main": "dist/ts-lambda-api-local.js",
  "typings": "dist/ts-lambda-api-local.d.ts",
  "author": "Matthew Snoddy",
  "license": "MIT",
  "files": [
    "README.md",
    "LICENSE",
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 70,
    "statements": 70,
    "functions": 70,
    "branches": 70,
    "exclude": [
      "tests/**/*"
    ]
  },
  "dependencies": {
    "aws-sdk": "^2.404.0",
    "command-line-args": "^5.0.2",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "swagger-ui-express": "^4.0.2",
    "ts-lambda-api": "^0.4.6"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/command-line-args": "^5.0.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/md5-file": "^4.0.0",
    "@types/node": "^11.13.7",
    "@types/swagger-ui-express": "^3.0.0",
    "@types/temp": "^0.8.33",
    "alsatian": "^2.3.0",
    "junit-bark": "^1.1.1",
    "marked": "^0.6.2",
    "md5-file": "^4.0.0",
    "nyc": "^13.3.0",
    "tap-spec": "^5.0.0",
    "temp": "^0.9.0",
    "tslint": "^5.13.0",
    "typed-rest-client": "^1.1.2",
    "typedoc": "^0.14.2",
    "typedoc-plugin-sourcefile-url": "^1.0.4",
    "typescript": "^3.3.3"
  }
}
