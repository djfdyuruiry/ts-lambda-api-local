{
  "name": "typescript-lambda-api-local",
  "description": "Test typescript AWS Lambda API's locally using express.",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/djfdyuruiry/typescript-lambda-api-local.git"
  },
  "scripts": {
    "tsc": "tsc",
    "alsatian": "alsatian",
    "clean": "git clean -fxd",
    "clean-install": "yarn run clean && yarn install",
    "build": "rm -rf dist && tsc",
    "build-tests": "rm -rf tests/js && tsc -p ./tests",
    "build-all": "yarn run build && yarn run build-tests",
    "tests": "cat tests/banner.txt && nyc --reporter=lcov --reporter=html alsatian --tap ./tests/js/**/*Tests.js",
    "test": "yarn run clean-install && yarn run build-all && yarn run tests"
  },
  "files": [
    "README.md",
    "LICENSE",
    "index.d.ts",
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "main": "index.js",
  "typings": "index.d.ts",
  "author": "Matthew Snoddy",
  "license": "MIT",
  "dependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/express": "^4.16.1",
    "aws-sdk": "^2.404.0",
    "command-line-args": "^5.0.2",
    "express": "^4.16.4",
    "typescript-lambda-api": "^0.2.3"
  },
  "devDependencies": {
    "@types/node": "^11.9.4",
    "alsatian": "^2.3.0",
    "nyc": "^13.3.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  }
}
