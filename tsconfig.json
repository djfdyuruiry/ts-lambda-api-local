{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "declaration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "target": "ES2024",
        "lib": [
            "ES2024"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
